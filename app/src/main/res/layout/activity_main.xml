<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:id="@+id/main">

    <TextView
        android:id="@+id/textViewAnimalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Name"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textViewAnimalDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Details"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonLion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Lion Details"
        android:onClick="onAnimalButtonClick" />

    <Button
        android:id="@+id/buttonElephant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Elephant Details"
        android:onClick="onAnimalButtonClick"
        android:layout_marginTop="16dp" />

</LinearLayout>
