<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:id="@+id/main"> <!-- This matches the 'main' id used in the MainActivity.java -->

    <!-- Button to display Lion details -->
    <Button
        android:id="@+id/buttonLion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Lion Details"
        android:onClick="onAnimalButtonClick" /> <!-- This matches the onClick method in MainActivity.java -->

    <!-- Button to display Elephant details -->
    <Button
        android:id="@+id/buttonElephant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Elephant Details"
        android:onClick="onAnimalButtonClick"
        android:layout_marginTop="16dp"
    /> <!-- Adds some space between the two buttons -->


    <TextView
        android:id="@+id/textViewAnimalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Name"
        android:textSize="18sp"
        android:layout_marginTop="24dp" /> <!-- Adds some space between the button and text -->

    <!-- TextView to display Animal Details -->
    <TextView
        android:id="@+id/textViewAnimalDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Details"
        android:textSize="16sp"
        android:layout_marginTop="8dp" /> <!-- Adds some space between the name and details -->
</LinearLayout>
